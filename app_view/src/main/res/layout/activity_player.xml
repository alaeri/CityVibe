<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:textSize="64sp"
        android:layout_gravity="center_horizontal"
        android:textColor="#FFFFFF"
        android:id="@+id/quitButton"
        android:text="âœ—"
        tools:ignore="HardcodedText" />
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        >
        <org.alaeri.cityvibe.player.SquaredImageViewCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/titleTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="20dp"
            android:background="@drawable/cover_thumb_bg"
            android:scaleType="centerCrop"
            android:id="@+id/coverLargeImageView"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titleTextView"
            android:textSize="20sp"
            android:textStyle="bold"
            android:lines="1"
            android:maxLines="1"
            android:singleLine="true"
            android:gravity="center"
            android:ellipsize="end"
            android:textColor="#FFFFFF"

            app:layout_constraintBottom_toTopOf="@id/artistTextView"
            tools:text="LONG SONGT TITLE TRY TO BREAK LAYOUT"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/artistTextView"
            android:textSize="14sp"
            android:lines="1"
            android:gravity="center"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#FFFFFF"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="This artist name is bigger than the world"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="40dp"
        android:paddingBottom="40dp"
        >
        <ImageButton
            android:background="@null"
            android:id="@+id/previousButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/playButton"
            android:src="@android:drawable/ic_media_previous"/>
        <be.rijckaert.tim.animatedvector.FloatingMusicActionButton
            android:id="@+id/playButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:backgroundTint="@color/colorAccent"
            android:layout_gravity="center"
            app:mode="playToPause"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/previousButton"
            app:layout_constraintEnd_toStartOf="@id/nextButton"
             />
        <ImageButton
            android:background="@null"
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/playButton"
            android:src="@android:drawable/ic_media_next"/>
    </android.support.constraint.ConstraintLayout>
</LinearLayout>