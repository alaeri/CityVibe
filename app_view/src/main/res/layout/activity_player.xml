<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="64sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/coverLargeImageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingBottom="30dp"
            android:textColor="#FFFFFF"
            android:text="âœ—"
            tools:ignore="HardcodedText" />
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:layout_constraintBottom_toTopOf="@id/titleTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/cover_thumb_bg"
            android:scaleType="centerCrop"
            android:id="@+id/coverLargeImageView"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titleTextView"
            android:textSize="40sp"
            android:lines="1"
            android:maxLines="1"
            android:singleLine="true"
            android:gravity="center"
            android:ellipsize="end"
            android:layout_margin="@dimen/margin"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@id/artistTextView"
            tools:text="LONG SONGT TITLE TRY TO BREAK LAYOUT"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/artistTextView"
            android:textSize="20sp"
            android:lines="1"
            android:gravity="center"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_margin="@dimen/margin"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="This artist name is bigger than the world"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        />
</LinearLayout>